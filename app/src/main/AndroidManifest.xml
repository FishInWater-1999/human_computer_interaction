<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mindhlju">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.mindhlju.qingming.QingmingActivity"></activity>
        <activity android:name="com.example.mindhlju.game.GameActivity" />
        <activity android:name="com.example.mindhlju.file.PDFDetailActivity" />
        <activity android:name="com.example.mindhlju.picture.PictureDetailActivity" />
        <activity android:name="com.example.mindhlju.picture.SharePictureActivity" />
        <activity android:name="com.example.mindhlju.music.activity.ShareMusicActivity"
            android:theme="@style/MusicActTheme"/>
        <activity android:name="com.example.mindhlju.file.ShareFileActivity" />
        <activity android:name="com.example.mindhlju.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.example.mindhlju.music.service.MusicService"
            android:enabled="true"
            android:exported="false"
            />
    </application>

</manifest>